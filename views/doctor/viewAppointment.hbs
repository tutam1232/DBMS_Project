<h2>Lịch hẹn</h2>

<form method="get" action="/doctor/viewAppointment">
    <label for="lichhen_ngay" class="col-form-label">Xem theo ngày cụ thể: </label>
    <div class="d-flex">
        <input type="date" name="lichhen_ngay" class="form-control" id="lichhen_ngay">
        <button  type="submit" class="btn btn-primary">Xem</button>
    </div>
</form>

<table class="table">
  <thead>
    <tr>
      <th>Mã phiếu</th>
      <th>Nha sĩ khám</th>
      <th>Ngày khám</th>
      <th>Thứ tự ca</th>
      <th>SDT khách hàng</th>
    </tr>
  </thead>
  <tbody>
    {{#each PhieuHen}}
    <tr>
    <td><input type="text" value="{{this.MaPhieu}}"></td>
    <td><input type="text" value="{{this.NhaSiKham}}"></td>
    <td><input type="text" value="{{this.Ngay}}"></td>
    <td><input type="text" value="{{this.ThuTuCa}}"></td>
    <td><input type="text" value="{{this.SdtKhachHang}}"></td>
    </tr>
    {{/each}}
  </tbody>
</table>

<br>
<br>
